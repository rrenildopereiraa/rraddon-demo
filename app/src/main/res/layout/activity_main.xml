<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rrpapfct.rraddondemo.MainActivity"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@color/primaryPurple"
    android:id="@+id/activity_main">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:layout_centerVertical="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36dp"
                android:text="Rraddon Demo"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="Um complemento para a Rrpapfct"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:elevation="36dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/card_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="24dp"
            android:text="Lista de Mudanças"
            android:textColor="@color/activeColor"
            android:textSize="28dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <EditText
                android:id="@+id/idInp"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:padding="22dp"
                android:background="@drawable/edit_text_background"
                android:hint="ID"
                android:inputType="number"
                android:maxLength="3"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"/>
            <EditText
                android:id="@+id/changelogInp"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/edit_text_background"
                android:hint="Changelog"
                android:maxLength="100"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginTop="10dp"/>
            <EditText
                android:id="@+id/published_atInp"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:background="@drawable/edit_text_background"
                android:hint="Data da Publicação"
                android:maxLength="10"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/sendBtn"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginLeft="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginTop="15dp"
                android:text="Publicar"
                android:textColor="@color/colorWhite"
                android:background="@drawable/button_background"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="18dp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/txtLink"
            android:textColorLink="@color/primaryPurple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/activeColor"
            android:text="@string/hyperlink"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>